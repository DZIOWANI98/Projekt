<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.141" fx:controller="projektKompetencyjny.adminStuffff.UiChatAdmin">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="110.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308">
                    <children>
                        <MaterialDesignIconView fill="#2b285d" glyphName="MESSAGE_TEXT_OUTLINE" size="65"
                                                textAlignment="CENTER" wrappingWidth="100.0">
                            <HBox.margin>
                                <Insets top="20.0"/>
                            </HBox.margin>
                        </MaterialDesignIconView>
                        <Label contentDisplay="CENTER" prefHeight="65.0" prefWidth="100.0"
                               style="-fx-font-weight: bold; -fx-font-size: 18;" text="Chat" textFill="#2b285d">
                            <font>
                                <Font size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets top="20.0"/>
                            </HBox.margin>
                        </Label>
                        <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1000.0" prefHeight="120.0"
                                    HBox.hgrow="ALWAYS">
                            <children>
                                <GridPane maxWidth="10000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                          AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="10.0"
                                                           prefWidth="171.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="210.0" minWidth="10.0"
                                                           prefWidth="210.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="32.0" minHeight="32.0" prefHeight="32.0"
                                                        vgrow="SOMETIMES"/>
                                        <RowConstraints maxHeight="27.0" minHeight="27.0" prefHeight="27.0"
                                                        vgrow="SOMETIMES"/>
                                        <RowConstraints maxHeight="57.0" minHeight="10.0" prefHeight="41.0"
                                                        vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Wybierz ucznia" textFill="#2b285d" GridPane.columnIndex="1"
                                               GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
                                            <font>
                                                <Font name="System Bold" size="12.0"/>
                                            </font>
                                        </Label>
                                        <JFXComboBox fx:id="listaOsob" onAction="#studentPicked" prefHeight="25.0"
                                                     prefWidth="200.0" GridPane.columnIndex="1"
                                                     GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
                                        <Label layoutX="110.0" layoutY="17.0" text="Wybierz klasę" textFill="#2b285d"
                                               GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
                                            <font>
                                                <Font name="System Bold" size="12.0"/>
                                            </font>
                                            <GridPane.margin>
                                                <Insets right="10.0"/>
                                            </GridPane.margin>
                                        </Label>
                                        <JFXComboBox fx:id="listaKlas" layoutX="110.0" layoutY="43.0"
                                                     onAction="#classPicked" prefHeight="25.0" prefWidth="78.0"
                                                     GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets right="10.0"/>
                                            </GridPane.margin>
                                        </JFXComboBox>
                                        <Label fx:id="labelJakiRodzic" layoutX="325.0" layoutY="19.0" textFill="#4d4d4d"
                                               GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                                               GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                                            <font>
                                                <Font name="System Bold" size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="errorLabel" alignment="CENTER_RIGHT" GridPane.rowIndex="2">
                                            <GridPane.margin>
                                                <Insets left="80.0"/>
                                            </GridPane.margin>
                                        </Label>
                                    </children>
                                </GridPane>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
                <TableView fx:id="tabelaMain" editable="true" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="181.0" prefWidth="560.0"
                           stylesheets="@style/styleMess.css" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="data" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" sortable="false"
                                     text="Data"/>
                        <TableColumn fx:id="godzina" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" sortable="false"
                                     text="Godzina"/>
                        <TableColumn fx:id="autor" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" sortable="false"
                                     text="Autor"/>
                        <TableColumn fx:id="wiadomosc" minWidth="0.0" prefWidth="222.0" sortable="false"
                                     text="Wiadomość"/>
                        <TableColumn fx:id="id" prefWidth="75.0" text="IdWiadomosci" visible="false"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <VBox.margin>
                        <Insets bottom="60.0" left="20.0" right="20.0" top="5.0"/>
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
        <JFXTextField fx:id="tekstWiadomosci" promptText="Wpisz wiadomość..." AnchorPane.bottomAnchor="20.0"
                      AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="120.0"/>
        <JFXButton fx:id="wyslij" buttonType="RAISED" minWidth="80.0" onAction="#wyslijDoBazy" ripplerFill="WHITE"
                   style="-fx-background-color: #2B285D;" text="Wyślij" textFill="#dedede"
                   AnchorPane.bottomAnchor="18.0" AnchorPane.rightAnchor="20.0"/>
    </children>
</AnchorPane>
